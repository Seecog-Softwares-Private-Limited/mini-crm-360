      }

      .billing-cycle-option .form-check-label {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        cursor: pointer;
        margin-left: 0.5rem;
      }

      .cycle-name {
        font-weight: 600;
        font-size: 1rem;
      }

      .cycle-price {
        font-weight: 700;
        font-size: 1.1rem;
        color: #667eea;
      }

      .checkout-input {
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
      }

      .checkout-input:focus {
        border-color: #667eea;
