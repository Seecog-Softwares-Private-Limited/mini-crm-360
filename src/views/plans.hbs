<div class="container-fluid">
  <div class="row">
    {{> sidebar}}

<div class="col-md-9 col-lg-10 main-content">
  <div class="container-fluid p-3">
    <style>
      /* ============================================
         PREMIUM PLANS PAGE STYLING
         ============================================ */
      
      .plans-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: calc(100vh - 2rem);
        padding: 1.5rem 0;
      }

      .plans-header {
        text-align: center;
        margin-bottom: 1.5rem;
      }

      .plans-title {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
      }

      .plans-title::before {
        content: '';
        width: 4px;
        height: 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
      }

      .plans-subtitle {
        color: #64748b;
        font-size: 0.95rem;
        margin-top: 0.5rem;
      }

      .plans-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      .plan-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 1.5rem 1.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid transparent;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
      }

      .plan-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: var(--plan-gradient);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s ease;
      }

      .plan-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        border-color: var(--plan-color);
      }

      .plan-card:hover::before {
        transform: scaleX(1);
      }

      .plan-card.featured {
        border-color: #f59e0b;
        box-shadow: 0 12px 30px rgba(245, 158, 11, 0.25);
        transform: scale(1.02);
      }

      .plan-card.featured::before {
        transform: scaleX(1);
        height: 6px;
      }

      /* Plan Header */
      .plan-header {
        text-align: center;
        margin-bottom: 1.25rem;
      }

      .plan-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 1rem;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #ffffff;
        background: var(--plan-gradient);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      }

      .plan-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.4rem;
      }

      .plan-description {
        color: #64748b;
        font-size: 0.85rem;
        line-height: 1.5;
      }

      /* Plan Pricing */
      .plan-pricing {
        text-align: center;
        margin-bottom: 1.25rem;
        padding-bottom: 1.25rem;
        border-bottom: 2px solid #e5e7eb;
      }

      .plan-price {
        font-size: 2.25rem;
        font-weight: 700;
        color: var(--plan-color);
        line-height: 1;
        margin-bottom: 0.4rem;
      }

      .plan-price-currency {
        font-size: 1.25rem;
        vertical-align: super;
      }

      .plan-period {
        color: #64748b;
        font-size: 0.85rem;
        font-weight: 500;
      }

      /* Plan Features */
      .plan-features {
        flex: 1;
        margin-bottom: 1.25rem;
      }

      .plan-features-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.9rem;
        text-align: center;
      }

      .feature-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .feature-item {
        display: flex;
        align-items: flex-start;
        gap: 0.6rem;
        padding: 0.5rem 0;
        color: #374151;
        font-size: 0.85rem;
        line-height: 1.5;
      }

      .feature-item i {
        color: var(--plan-color);
        font-size: 0.95rem;
        margin-top: 0.15rem;
        flex-shrink: 0;
      }

      /* Plan Button */
      .plan-button {
        width: 100%;
        padding: 0.85rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        color: #ffffff;
        background: var(--plan-gradient);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
      }

      .plan-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s;
      }

      .plan-button:hover::before {
        left: 100%;
      }

      .plan-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
      }

      .plan-button:active {
        transform: translateY(0);
      }

      /* Plan Variants */
      .plan-card.free-trial {
        --plan-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --plan-color: #10b981;
      }

      .plan-card.silver {
        --plan-gradient: linear-gradient(135deg, #64748b 0%, #475569 100%);
        --plan-color: #64748b;
      }

      .plan-card.gold {
        --plan-gradient: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        --plan-color: #f59e0b;
      }

      .plan-card.gold.featured {
        border-color: #f59e0b;
        box-shadow: 0 15px 40px rgba(245, 158, 11, 0.3);
      }

      /* Current/Selected Plan Styling */
      .plan-card.current-plan {
        border: 3px solid var(--plan-color);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        position: relative;
        transform: scale(1.02);
      }

      .current-plan-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: var(--plan-gradient);
        color: #ffffff;
        padding: 0.4rem 0.8rem;
        border-radius: 16px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
        z-index: 10;
      }

      /* Hide existing badge if current plan */
      .plan-card.current-plan .plan-badge {
        display: none;
      }

      .plan-card.current-plan .plan-button {
        background: #6b7280;
        cursor: default;
        opacity: 0.8;
      }

      .plan-card.current-plan .plan-button:hover {
        transform: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        opacity: 0.8;
      }

      /* Badge */
      .plan-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--plan-gradient);
        color: #ffffff;
        padding: 0.4rem 0.8rem;
        border-radius: 16px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
      }

      /* Responsive */
      @media (max-width: 768px) {
        .plans-grid {
          grid-template-columns: 1fr;
          gap: 1.5rem;
        }

        .plan-card.featured {
          transform: scale(1);
        }

        .plans-title {
          font-size: 2rem;
        }
      }

      /* ============================================
         CHECKOUT MODAL STYLING
         ============================================ */
      .checkout-modal-content {
        border-radius: 16px;
        border: none;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      }

      .checkout-modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #ffffff;
        border-bottom: none;
        border-radius: 16px 16px 0 0;
        padding: 1.5rem;
      }

      .checkout-modal-header .modal-title {
        font-weight: 700;
        font-size: 1.25rem;
      }

      .checkout-modal-header .btn-close {
        filter: invert(1);
        opacity: 0.9;
      }

      .checkout-modal-body {
        padding: 2rem;
        background: #ffffff;
      }

      .checkout-summary {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 2px solid #e9ecef;
      }

      .summary-header {
        margin-bottom: 1rem;
      }

      .summary-title {
        font-weight: 700;
        color: #1e293b;
        font-size: 1rem;
        margin: 0;
      }

      .summary-content {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .summary-plan,
      .summary-includes {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }

      .summary-label {
        font-size: 0.85rem;
        color: #64748b;
        font-weight: 600;
      }

      .summary-value {
        font-size: 1rem;
        color: #1e293b;
        font-weight: 600;
      }

      .checkout-section {
        margin-bottom: 2rem;
      }

      .checkout-label {
        font-weight: 700;
        color: #1e293b;
        font-size: 1rem;
        margin-bottom: 1rem;
        display: block;
      }

      .billing-cycle-selector {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .billing-cycle-option {
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #ffffff;
      }

      .billing-cycle-option:hover {
        border-color: #667eea;
