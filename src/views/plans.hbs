  // Update checkout price based on billing cycle
  function updateCheckoutPrice(plan) {
    const billingCycle = document.querySelector('input[name="billingCycle"]:checked').value;
    const monthlyPrice = plan.price;
    const yearlyPrice = plan.yearlyPrice || Math.round(monthlyPrice * 12);
    
    // Update discount badge if yearly price is less than monthly * 12
    const yearlyLabel = document.querySelector('#billingYearly + label .cycle-name');
    if (plan.yearlyPrice && plan.yearlyPrice < (plan.price * 12)) {
      const discountPercent = Math.round((1 - (plan.yearlyPrice / (plan.price * 12))) * 100);
      yearlyLabel.innerHTML = `Yearly <span class="badge bg-success">Save ${discountPercent}%</span>`;
    } else {
      yearlyLabel.innerHTML = 'Yearly';
    }
    
    if (billingCycle === 'yearly') {
      document.querySelector('#billingMonthly + label .cycle-price').textContent = `${plan.currency === 'INR' ? '₹' : plan.currency === 'USD' ? '$' : plan.currency === 'EUR' ? '€' : plan.currency}${formatPrice(monthlyPrice, plan.currency)}/month`;
      document.querySelector('#billingYearly + label .cycle-price').textContent = `${plan.currency === 'INR' ? '₹' : plan.currency === 'USD' ? '$' : plan.currency === 'EUR' ? '€' : plan.currency}${formatPrice(yearlyPrice, plan.currency)}/year`;
