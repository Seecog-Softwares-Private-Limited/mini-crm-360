        border-radius: 10px;
        transition: all 0.3s ease;
      }

      .checkout-proceed-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
      }

      .checkout-proceed-btn:active {
        transform: translateY(0);
      }

      .payment-security-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #e5e7eb;
      }

      .security-badges {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #10b981;
        font-size: 0.85rem;
        font-weight: 600;
      }

      .security-badges i {
        font-size: 1rem;
      }

      .refund-policy-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #667eea;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.3s ease;
      }

      .refund-policy-link:hover {
        color: #764ba2;
        text-decoration: underline;
      }

      .refund-policy-link i {
        font-size: 0.9rem;
      }
    </style>

    <div class="plans-container">
      <div class="plans-header">
        <h1 class="plans-title">Choose Your Plan</h1>
        <p class="plans-subtitle">Select the perfect plan for your business needs</p>
      </div>

      <div class="plans-grid" id="plansGrid">
        <!-- Plans will be loaded dynamically from API -->
        <div class="text-center" style="grid-column: 1 / -1; padding: 3rem;">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading plans...</span>
          </div>
          <p class="mt-3 text-muted">Loading plans...</p>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
</div>

<script>
  // Ensure toggleMenu is available (fallback if not defined in head)
  if (typeof window.toggleMenu === 'undefined') {
    window.toggleMenu = function(menuId) {
      const submenu = document.getElementById(menuId);
      if (!submenu) {
        console.warn('Submenu not found:', menuId);
        return;
      }
      
      const toggle = document.querySelector(`[onclick="toggleMenu('${menuId}')"]`);
      
      if (submenu.classList.contains('show')) {
        submenu.classList.remove('show');
        if (toggle) toggle.classList.add('collapsed');
      } else {
        submenu.classList.add('show');
        if (toggle) toggle.classList.remove('collapsed');
      }
    };
  }

  // API Configuration
  const API_BASE = '{{apiBase}}' || 'http://localhost:3002/api/v1';
  const currentPlanSlug = '{{currentPlanSlug}}' || 'free-trial';

  // Plan configuration mapping
  const planConfig = {
    'free-trial': {
      cssClass: 'free-trial',
      icon: 'fas fa-gift',
      badge: null,
      featured: false
    },
    'silver': {
      cssClass: 'silver',
      icon: 'fas fa-star',
      badge: 'Popular',
      featured: false
    },
    'gold': {
      cssClass: 'gold',
      icon: 'fas fa-crown',
      badge: 'Best Value',
      featured: true
    }
  };

  // Format number with commas
  function formatNumber(num) {
    if (num === null || num === undefined) return 'Unlimited';
    return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
  }

  // Generate features list from plan data
  function generateFeaturesList(plan) {
    const features = [];
    
    // Customer limit
    if (plan.maxCustomers === null || plan.maxCustomers >= 999999) {
      features.push({ icon: 'fas fa-check-circle', text: 'Unlimited customers' });
    } else {
      features.push({ icon: 'fas fa-check-circle', text: `Up to ${formatNumber(plan.maxCustomers)} customers` });
    }
    
    // Business accounts
    if (plan.maxBusinesses === null || plan.maxBusinesses >= 999999) {
      features.push({ icon: 'fas fa-check-circle', text: 'Unlimited business accounts' });
    } else {
      features.push({ icon: 'fas fa-check-circle', text: `${formatNumber(plan.maxBusinesses)} business account${plan.maxBusinesses > 1 ? 's' : ''}` });
    }
    
    // Email templates
    if (plan.hasEmailTemplates) {
      features.push({ icon: 'fas fa-check-circle', text: 'Email templates' });
    } else {
      features.push({ icon: 'fas fa-times-circle', text: 'Email templates', disabled: true });
    }
    
    // WhatsApp templates
    if (plan.hasWhatsAppTemplates) {
      features.push({ icon: 'fas fa-check-circle', text: 'WhatsApp templates' });
    } else {
      features.push({ icon: 'fas fa-times-circle', text: 'WhatsApp templates', disabled: true });
    }
    
    // Emails per month
    if (plan.maxEmailsPerMonth === null || plan.maxEmailsPerMonth >= 999999) {
      features.push({ icon: 'fas fa-check-circle', text: 'Unlimited emails per month' });
    } else {
      features.push({ icon: 'fas fa-check-circle', text: `${formatNumber(plan.maxEmailsPerMonth)} emails per month` });
    }
    
    // WhatsApp messages per month
    if (plan.maxWhatsAppMessagesPerMonth === null || plan.maxWhatsAppMessagesPerMonth >= 999999) {
      features.push({ icon: 'fas fa-check-circle', text: 'Unlimited WhatsApp messages per month' });
    } else if (plan.maxWhatsAppMessagesPerMonth > 0) {
      features.push({ icon: 'fas fa-check-circle', text: `${formatNumber(plan.maxWhatsAppMessagesPerMonth)} WhatsApp messages per month` });
    } else {
      features.push({ icon: 'fas fa-times-circle', text: 'WhatsApp messaging', disabled: true });
    }
    
    // Invoice
    if (plan.hasInvoice) {
      features.push({ icon: 'fas fa-check-circle', text: 'Invoice generation' });
    } else {
      features.push({ icon: 'fas fa-times-circle', text: 'Invoice generation', disabled: true });
    }
    
    // Analytics
    if (plan.hasAnalytics) {
      features.push({ icon: 'fas fa-check-circle', text: 'Advanced analytics & reports' });
    } else {
      features.push({ icon: 'fas fa-times-circle', text: 'Analytics & reports', disabled: true });
    }
    
    // API Access
    if (plan.hasApiAccess) {
      features.push({ icon: 'fas fa-check-circle', text: 'API access' });
    }
    
    // Custom Integrations
    if (plan.hasCustomIntegrations) {
      features.push({ icon: 'fas fa-check-circle', text: 'Custom integrations' });
    }
    
    // Priority Support
    if (plan.hasPrioritySupport) {
      features.push({ icon: 'fas fa-check-circle', text: 'Priority support' });
    } else {
      features.push({ icon: 'fas fa-check-circle', text: 'Community support' });
    }
    
    return features;
  }

  // Format billing period
  function formatBillingPeriod(period) {
    const periodMap = {
      'monthly': 'Per Month',
      'yearly': 'Per Year',
      'lifetime': 'One-time',
      'free': 'Forever'
    };
    return periodMap[period] || period;
  }

  // Format price
  function formatPrice(price, currency) {
    const symbolMap = {
      'INR': '₹',
      'USD': '$',
      'EUR': '€'
    };
    const symbol = symbolMap[currency] || currency;
    return price.toLocaleString('en-IN', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
  }

  // Render plan card
  function renderPlanCard(plan) {
    const config = planConfig[plan.slug] || {
      cssClass: plan.slug,
      icon: 'fas fa-box',
      badge: null,
      featured: false
    };
    
    const isCurrentPlan = plan.slug === currentPlanSlug;
    const features = generateFeaturesList(plan);
    
    let cardClasses = `plan-card ${config.cssClass}`;
    if (config.featured) cardClasses += ' featured';
    if (isCurrentPlan) cardClasses += ' current-plan';
    
    let badgeHtml = '';
    if (isCurrentPlan) {
      badgeHtml = '<div class="current-plan-badge">Current Plan</div>';
    } else if (config.badge) {
      badgeHtml = `<div class="plan-badge">${config.badge}</div>`;
    }
    
    const featuresHtml = features.map(feature => {
      const iconColor = feature.disabled ? 'style="color: #ef4444;"' : '';
      return `
        <li class="feature-item">
          <i class="${feature.icon}" ${iconColor}></i>
          <span>${feature.text}</span>
        </li>
      `;
    }).join('');
    
    // Determine button text
    let buttonText;
    if (isCurrentPlan) {
      buttonText = 'Current Plan';
    } else if (currentPlanSlug === 'free-trial' && plan.slug !== 'free-trial') {
      buttonText = `Upgrade to ${plan.name}`;
    } else if (plan.price === 0) {
      buttonText = 'Get Started';
    } else {
      buttonText = `Choose ${plan.name}`;
    }
    
    const buttonOnclick = isCurrentPlan ? 'void(0)' : `selectPlan('${plan.slug}')`;
    
    return `
      <div class="${cardClasses}">
        ${badgeHtml}
        <div class="plan-header">
          <div class="plan-icon">
            <i class="${config.icon}"></i>
          </div>
          <h2 class="plan-name">${plan.name}</h2>
          <p class="plan-description">${plan.description || 'Perfect plan for your business needs'}</p>
        </div>
        
        <div class="plan-pricing">
          <div class="plan-price">
            <span class="plan-price-currency">${plan.currency === 'INR' ? '₹' : plan.currency === 'USD' ? '$' : plan.currency === 'EUR' ? '€' : plan.currency}</span>${formatPrice(plan.price, plan.currency)}
          </div>
          <div class="plan-period">${formatBillingPeriod(plan.billingPeriod)}</div>
        </div>
        
        <div class="plan-features">
          <h3 class="plan-features-title">What's Included</h3>
          <ul class="feature-list">
            ${featuresHtml}
          </ul>
        </div>
        
        <button class="plan-button" onclick="${buttonOnclick}">
          ${buttonText}
        </button>
      </div>
    `;
  }

  // Fetch plans from API
  async function loadPlans() {
    try {
      const response = await fetch(`${API_BASE}/plans`, {
        method: 'GET',
        credentials: 'include',
        headers: {
          'Content-Type': 'application/json'
        }
      });

      if (!response.ok) {
        throw new Error(`Failed to fetch plans: ${response.statusText}`);
      }

      const result = await response.json();
      const plans = result.data || result;

      if (!Array.isArray(plans) || plans.length === 0) {
        throw new Error('No plans found');
      }

      // Store plans globally for checkout
      allPlans = plans;

      // Render plans
      const plansGrid = document.getElementById('plansGrid');
      plansGrid.innerHTML = plans.map(plan => renderPlanCard(plan)).join('');

    } catch (error) {
      console.error('Error loading plans:', error);
      const plansGrid = document.getElementById('plansGrid');
      plansGrid.innerHTML = `
        <div class="text-center" style="grid-column: 1 / -1; padding: 3rem;">
          <i class="fas fa-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
          <p class="mt-3 text-danger">Failed to load plans. Please refresh the page.</p>
          <button class="btn btn-primary mt-2" onclick="loadPlans()">Retry</button>
        </div>
      `;
    }
  }

  // Store plans globally for checkout modal
  let allPlans = [];

  // Plan selection handler - Show checkout modal
  function selectPlan(planSlug) {
    const plan = allPlans.find(p => p.slug === planSlug);
    if (!plan) {
      console.error('Plan not found:', planSlug);
      return;
    }
    
    showCheckoutModal(plan);
  }

  // Show checkout modal
  async function showCheckoutModal(plan) {
