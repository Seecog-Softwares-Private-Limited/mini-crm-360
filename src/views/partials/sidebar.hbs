<div class="col-md-3 col-lg-2 px-0">
  <div class="sidebar">
    <!-- Logo and Brand Section -->
    <div class="sidebar-header">
      <div class="logo-container">
        <div class="logo-wrapper">
          <img src="/assets/logo.jpg" alt="Logo" class="sidebar-logo" 
               onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22%3E%3Crect width=%2240%22 height=%2240%22 fill=%22%23667eea%22 rx=%228%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 fill=%22white%22 font-size=%2216%22 font-weight=%22bold%22%3ECRM%3C/text%3E%3C/svg%3E';">
        </div>
        <div class="brand-info">
          <h5 class="brand-title">Mini CRM 360</h5>
          <small class="brand-subtitle">Business Management</small>
        </div>
      </div>
    </div>

    <!-- User Profile Section -->
    <div class="sidebar-profile">
      <div class="profile-avatar">
        <img src="https://www.gravatar.com/avatar/2c7d99fe281ecd3bcd65ab915bac6dd5?s=250" 
             alt="User Avatar" 
             class="avatar-img"
             onerror="this.src='https://ui-avatars.com/api/?name={{user.firstName}}+{{user.lastName}}&background=667eea&color=fff&size=128'">
      </div>
      <div class="profile-info">
        <div class="profile-name">{{user.firstName}} {{user.lastName}}</div>
        <div class="profile-role">Administrator</div>
      </div>
    </div>

    <!-- Navigation Menu -->
    <nav class="sidebar-nav">
      <!-- Profile Menu Item -->
      <div class="nav-item">
        <a class="nav-link {{#if (eq activePage 'profile')}}active{{/if}}" href="/profile">
          <i class="fas fa-user-circle"></i>
          <span class="nav-text">Profile</span>
        </a>
      </div>

      <!-- CRM Tools Section -->
      <div class="nav-section">
        <div class="menu-toggle" onclick="toggleMenu('whatsapp-submenu')">
          <div class="nav-link">
            <i class="fas fa-briefcase"></i>
            <span class="nav-text">CRM Tools</span>
            <i class="fas fa-chevron-down nav-arrow"></i>
          </div>
        </div>
        <div class="submenu show" id="whatsapp-submenu">
          <a class="nav-link submenu-link {{#if (eq activePage 'dashboard')}}active{{/if}}" href="/dashboard">
            <i class="fas fa-tachometer-alt"></i>
            <span class="nav-text">Dashboard</span>
          </a>
          <a class="nav-link submenu-link {{#if (eq activePage 'business')}}active{{/if}}" href="/business">
            <i class="fas fa-building"></i>
            <span class="nav-text">Business</span>
          </a>
          <a class="nav-link submenu-link {{#if (eq activePage 'customers')}}active{{/if}}" href="/customers">
            <i class="fas fa-users"></i>
            <span class="nav-text">Customers</span>
          </a>
          <a class="nav-link submenu-link {{#if (eq activePage 'campaigns')}}active{{/if}}" href="/campaigns">
            <i class="fas fa-bullhorn"></i>
            <span class="nav-text">Campaigns</span>
          </a>
          <a class="nav-link submenu-link {{#if (eq activePage 'invoice')}}active{{/if}}" href="/invoice">
            <i class="fas fa-file-invoice-dollar"></i>
            <span class="nav-text">Invoice</span>
          </a>
        </div>
      </div>

