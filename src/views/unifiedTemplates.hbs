<script>
  // NOTE: We use the global apiCall() defined in main.hbs
  // which automatically adds API_BASE + Authorization header
  // and returns parsed JSON (or throws on error).

  let emailTemplates = [];
  let currentEditingId = null;
  let currentDeleteId = null;

  // ---------- Load document types for dropdown ----------
  async function loadDocumentTypesForSelect() {
    const select = document.getElementById('documentTypeId');
    if (!select) return;

    // reset options
    select.innerHTML = '<option value="">-- None --</option>';

    try {
      const list = await apiCall('/document-types');
      (list || []).forEach(function (dt) {
        const opt = document.createElement('option');
        opt.value = dt.id;
        opt.textContent =
          dt.documentName ||
          dt.document_name ||
          dt.name ||
          ('#' + dt.id);
        select.appendChild(opt);
      });
    } catch (err) {
      console.error('Error loading document types:', err);
    }
  }

  // ---------- Render email templates in card view ----------
  function renderEmailTemplates() {
    const container = document.getElementById('emailTemplatesContainer');
    if (!container) return;

    if (!emailTemplates.length) {
      container.innerHTML = `
        <div class="col-12">
          <div class="empty-state">
            <div class="empty-state-icon">
              <i class="fas fa-envelope-open-text"></i>
            </div>
            <div class="empty-state-text">No email templates found</div>
            <div class="empty-state-subtext">Click "New Template" to create your first email template</div>
          </div>
        </div>
      `;
      return;
    }

    const cardsHtml = emailTemplates
      .map(function (t) {
        const defaultBadge = t.isDefault 
          ? '<span class="template-badge default"><i class="fas fa-star me-1"></i>Default</span>'
          : '<span class="template-badge not-default">Not Default</span>';

        return `
          <div class="col-md-6 col-lg-4">
            <div class="template-card">
              <div class="template-card-header">
                <div class="template-icon">
                  <i class="fas fa-envelope"></i>
                </div>
                <h5 class="template-title">${escapeHtml(t.templateName || 'Untitled')}</h5>
                <div class="template-key">${escapeHtml(t.templateKey || '')}</div>
              </div>
              <div class="template-card-body">
                <div class="template-info-item">
                  <span class="template-info-label">Subject:</span>
                  <span class="template-info-value">${escapeHtml(t.subject || '-')}</span>
                </div>
                <div class="template-info-item">
                  <span class="template-info-label">Status:</span>
                  <span class="template-info-value">${defaultBadge}</span>
                </div>
              </div>
              <div class="template-card-footer">
                <button class="btn-template btn-template-view" onclick="viewTemplate(${t.id})">
                  <i class="fas fa-eye me-1"></i>View
                </button>
                <button class="btn-template btn-template-edit" onclick="editTemplate(${t.id})">
                  <i class="fas fa-edit me-1"></i>Edit
                </button>
                <button class="btn-template btn-template-delete" onclick="deleteTemplate(${t.id})">
                  <i class="fas fa-trash me-1"></i>Delete
                </button>
              </div>
            </div>
          </div>
        `;
      })
      .join('');

    container.innerHTML = cardsHtml;
  }

  function escapeHtml(str) {
    if (!str) return '';
    const div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  // ---------- Load from API ----------
  async function loadEmailTemplates() {
    const container = document.getElementById('emailTemplatesContainer');
    if (container) {
      container.innerHTML = `
        <div class="col-12">
          <div class="loading-state">
            <div class="loading-spinner"></div>
            <p class="mt-3 mb-0 text-muted">Loading templates...</p>
          </div>
        </div>
      `;
    }

    try {
      const list = await apiCall('/email-templates'); // returns JSON array
      emailTemplates = Array.isArray(list) ? list : [];
      renderEmailTemplates();
    } catch (err) {
      console.error('Error fetching email templates:', err);
      if (container) {
        container.innerHTML = `
          <div class="col-12">
            <div class="empty-state">
              <div class="empty-state-icon text-danger">
                <i class="fas fa-exclamation-triangle"></i>
              </div>
              <div class="empty-state-text text-danger">Failed to load email templates</div>
              <div class="empty-state-subtext">Please try refreshing the page</div>
            </div>
          </div>
        `;
      }
    }
  }

  // ---------- Update Template Key Preview ----------
  function updateTemplateKeyPreview() {
    var templateName = document.getElementById('templateName').value.trim();
    var previewEl = document.getElementById('templateKeyPreview');
    var previewKeyEl = document.getElementById('generatedKeyPreview');
    
    if (templateName) {
      var generatedKey = generateTemplateKey(templateName);
      previewKeyEl.textContent = generatedKey || '(Enter template name)';
      previewEl.style.display = 'block';
    } else {
      previewEl.style.display = 'none';
    }
  }

  // ---------- Open create modal ----------
  function openCreateTemplateModal() {
    currentEditingId = null;
    document.getElementById('emailTemplateModalTitle').textContent =
      'Add Email Template';
    document.getElementById('emailTemplateForm').reset();
    document.getElementById('emailTemplateId').value = '';
    document.getElementById('isDefault').checked = false;
    document.getElementById('templateKeyPreview').style.display = 'none';

    var modalEl = document.getElementById('emailTemplateModal');
    var modal = bootstrap.Modal.getOrCreateInstance(modalEl);
    modal.show();
  }

  // ---------- Generate Template Key from Template Name ----------
  function generateTemplateKey(templateName) {
    if (!templateName) return '';
    // Convert to uppercase, replace spaces and special characters with underscores
    return templateName
      .trim()
      .toUpperCase()
      .replace(/[^A-Z0-9_]/g, '_')  // Replace non-alphanumeric (except underscore) with underscore
      .replace(/_+/g, '_')           // Replace multiple underscores with single underscore
      .replace(/^_+|_+$/g, '');      // Remove leading/trailing underscores
  }

  // ---------- Edit template ----------
  function editTemplate(id) {
    var t = emailTemplates.find(function (x) { return x.id === id; });
    if (!t) return;

    currentEditingId = id;
    document.getElementById('emailTemplateModalTitle').textContent =
      'Edit Email Template';
    document.getElementById('emailTemplateId').value = t.id;
    document.getElementById('templateName').value = t.templateName || '';
    document.getElementById('subject').value = t.subject || '';
    document.getElementById('bodyHtml').value = t.bodyHtml || '';
    document.getElementById('isDefault').checked = !!t.isDefault;

    // Update preview based on current template name
    updateTemplateKeyPreview();

    var modalEl = document.getElementById('emailTemplateModal');
    var modal = bootstrap.Modal.getOrCreateInstance(modalEl);
    modal.show();
  }

  // ---------- View template ----------
  function viewTemplate(id) {
    var t = emailTemplates.find(function (x) { return x.id === id; });
    if (!t) return;

    var docType = 'Not linked';
    if (t.documentType) {
      docType =
        t.documentType.documentName ||
        t.documentType.document_name ||
        t.documentType.name ||
        ('#' + t.documentType.id);
    }

    document.getElementById('viewTemplateName').textContent = t.templateName || '';
    document.getElementById('viewTemplateKey').textContent = t.templateKey || '';
    document.getElementById('viewSubject').textContent = t.subject || '';
    document.getElementById('viewDocumentType').textContent = docType;
    document.getElementById('viewBodyHtml').innerHTML = t.bodyHtml || '';

    var modalEl = document.getElementById('viewEmailTemplateModal');
    var modal = bootstrap.Modal.getOrCreateInstance(modalEl);
    modal.show();
  }

  // ---------- Save (create / update) ----------
  async function saveEmailTemplate() {
    var templateName = document.getElementById('templateName').value.trim();
    var subject = document.getElementById('subject').value.trim();
    var bodyHtml = document.getElementById('bodyHtml').value;
    var isDefault = document.getElementById('isDefault').checked;

    if (!templateName || !subject || !bodyHtml) {
      showAlert('Please fill all required fields.', 'danger');
      return;
    }

    // Generate template key from template name
    var templateKey = generateTemplateKey(templateName);
    if (!templateKey) {
      showAlert('Template name is required to generate template key.', 'danger');
      return;
    }

    var payload = {
      templateKey: templateKey,
      templateName: templateName,
      subject: subject,
      bodyHtml: bodyHtml,
      documentTypeId: null,
      isDefault: isDefault,
    };

    try {
      if (currentEditingId) {
        await apiCall('/email-templates/' + currentEditingId, {
          method: 'PUT',
          body: JSON.stringify(payload),
        });
      } else {
        await apiCall('/email-templates', {
          method: 'POST',
          body: JSON.stringify(payload),
        });
      }

      var modalEl = document.getElementById('emailTemplateModal');
      var modal = bootstrap.Modal.getInstance(modalEl);
      modal.hide();

      showAlert('Email template saved successfully.', 'success');
      await loadEmailTemplates();
    } catch (err) {
      console.error('Save error:', err);
      showAlert('Failed to save email template.', 'danger');
    }
  }

  // ---------- Delete ----------
  function deleteTemplate(id) {
    const template = emailTemplates.find(t => t.id === id);
    if (!template) return;

    currentDeleteId = id;
    
    // Populate delete modal with template info
    document.getElementById('deleteTemplateName').textContent = template.templateName || 'Untitled';
    document.getElementById('deleteTemplateKey').textContent = template.templateKey || '—';
    
    // Show modal
    const modal = new bootstrap.Modal(document.getElementById('deleteEmailTemplateModal'));
    modal.show();
  }

  async function confirmDeleteEmailTemplate() {
    if (!currentDeleteId) return;

    try {
      await apiCall('/email-templates/' + currentDeleteId, {
        method: 'DELETE',
      });

      // Hide modal
      const modal = bootstrap.Modal.getInstance(document.getElementById('deleteEmailTemplateModal'));
      modal?.hide();

      showAlert('Email template deleted successfully.', 'success');
      await loadEmailTemplates();
    } catch (err) {
      console.error('Delete error:', err);
      showAlert('Failed to delete email template.', 'danger');
    } finally {
      currentDeleteId = null;
    }
  }

  // ---------- Alert helper ----------
  function showAlert(message, type) {
    var alertDiv = document.createElement('div');
    alertDiv.className =
      'alert alert-' + type + ' alert-dismissible fade show position-fixed';
    alertDiv.style.cssText =
      'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    alertDiv.innerHTML =
      message +
      '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>';
    document.body.appendChild(alertDiv);

    setTimeout(function () {
      if (alertDiv.parentNode) {
        alertDiv.parentNode.removeChild(alertDiv);
      }
    }, 5000);
  }

  // ---------- Tab Switching ----------
  function switchTab(tabType) {
    // Update tab buttons
    document.querySelectorAll('.template-tab').forEach(btn => {
      btn.classList.remove('active');
    });
    document.querySelector(`[data-tab="${tabType}"]`).classList.add('active');

    // Update tab content
    document.querySelectorAll('.template-tab-content').forEach(content => {
      content.classList.remove('active');
    });
    document.getElementById(`${tabType}TabContent`).classList.add('active');

    // Update new template button
    const newBtn = document.getElementById('newTemplateBtn');
    if (tabType === 'email') {
      newBtn.setAttribute('data-bs-target', '#emailTemplateModal');
      newBtn.innerHTML = '<i class="fas fa-plus me-2"></i>New Email Template';
    } else {
      newBtn.setAttribute('data-bs-target', '#whatsappTemplateModal');
      newBtn.innerHTML = '<i class="fas fa-plus me-2"></i>New WhatsApp Template';
    }

    // Load templates for the active tab
    if (tabType === 'email') {
      loadEmailTemplates();
    } else {
      loadWhatsAppTemplates();
    }
  }

  // ---------- WhatsApp Templates Functions ----------
  let whatsappTemplates = [];
  let whatsappSource = 'meta';

  async function loadWhatsAppTemplates() {
    const container = document.getElementById('whatsappTemplatesContainer');
    if (container) {
      container.innerHTML = `
        <div class="col-12">
          <div class="loading-state">
            <div class="loading-spinner"></div>
            <p class="mt-3 mb-0 text-muted">Loading WhatsApp templates...</p>
          </div>
        </div>
      `;
    }

    try {
      let data;
      if (whatsappSource === 'meta') {
        const resp = await apiCall('/templates/meta');
        const rows = (resp && (resp.data || resp.templates || resp.items)) || [];
        whatsappTemplates = normalizeMetaTemplates(rows);
      } else {
        const resp = await apiCall('/templates');
        whatsappTemplates = Array.isArray(resp) ? resp : ((resp && (resp.data || resp.items)) || []);
      }
      renderWhatsAppTemplates();
    } catch (error) {
      console.error('Error loading WhatsApp templates:', error);
      if (container) {
        container.innerHTML = `
          <div class="col-12">
            <div class="empty-state">
              <div class="empty-state-icon text-danger">
                <i class="fas fa-exclamation-triangle"></i>
              </div>
              <div class="empty-state-text text-danger">Failed to load WhatsApp templates</div>
              <div class="empty-state-subtext">Please try refreshing the page</div>
            </div>
          </div>
        `;
      }
    }
  }

  function normalizeMetaTemplates(rows) {
    const arr = Array.isArray(rows) ? rows : (rows?.data || []);
    return arr.map(r => ({
      __meta: true,
      id: r.id || r.name,
      waName: r.name || r.waName || '—',
      displayName: r.display_name || r.displayName || r.name || '—',
      category: (r.category || '').toLowerCase(),
      language: r.language || 'en_US',
      status: r.status || r.approval_status || '—',
      quality: r.quality_score || '—',
      rejectionReason: r.rejection_reason || r.latest_rejection_reason || '',
      _raw: r,
      createdAt: r.last_updated_time || r.created_time || null,
      htmlContent: ''
    }));
  }

  function renderWhatsAppTemplates() {
    const container = document.getElementById('whatsappTemplatesContainer');
    if (!container) return;

    if (!whatsappTemplates.length) {
      container.innerHTML = `
        <div class="col-12">
          <div class="empty-state">
            <div class="empty-state-icon">
              <i class="fab fa-whatsapp"></i>
            </div>
            <div class="empty-state-text">No WhatsApp templates found</div>
            <div class="empty-state-subtext">Click "New WhatsApp Template" to create your first template</div>
          </div>
        </div>
      `;
      return;
    }

    const cardsHtml = whatsappTemplates.map(t => {
      const isMeta = !!t.__meta;
      const statusBadge = isMeta && t.status
        ? `<span class="badge bg-${t.status === 'APPROVED' ? 'success' : (t.status === 'REJECTED' ? 'danger' : 'secondary')} ms-1">${t.status}</span>`
        : '';
      
      return `
        <div class="col-md-6 col-lg-4">
          <div class="template-card">
            <div class="template-card-header">
              <div class="template-icon" style="background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);">
                <i class="fab fa-whatsapp"></i>
              </div>
              <h5 class="template-title">${escapeHtml(t.displayName || t.waName || 'Untitled')}</h5>
              <div class="template-key">${escapeHtml(t.waName || '')}</div>
            </div>
            <div class="template-card-body">
              <div class="template-info-item">
                <span class="template-info-label">Category:</span>
                <span class="template-info-value">${escapeHtml(t.category || '-')}</span>
              </div>
              <div class="template-info-item">
                <span class="template-info-label">Language:</span>
                <span class="template-info-value">${escapeHtml(t.language || '-')}</span>
              </div>
              <div class="template-info-item">
                <span class="template-info-label">Status:</span>
                <span class="template-info-value">${statusBadge || '-'}</span>
              </div>
            </div>
            <div class="template-card-footer">
              ${!isMeta ? `
                <button class="btn-template btn-template-edit" onclick="editWhatsAppTemplate(${t.id})">
                  <i class="fas fa-edit me-1"></i>Edit
                </button>
                <button class="btn-template btn-template-delete" onclick="deleteWhatsAppTemplate(${t.id})">
                  <i class="fas fa-trash me-1"></i>Delete
                </button>
              ` : '<span class="text-muted small">Meta templates cannot be edited</span>'}
            </div>
          </div>
        </div>
      `;
    }).join('');

    container.innerHTML = cardsHtml;
  }

  function searchWhatsAppTemplates() {
    const q = document.getElementById('whatsappSearchInput').value.toLowerCase().trim();
    const filtered = whatsappTemplates.filter(t =>
      (t.waName || '').toLowerCase().includes(q) ||
      (t.displayName || '').toLowerCase().includes(q) ||
      (t.category || '').toLowerCase().includes(q)
    );
    const original = whatsappTemplates;
    whatsappTemplates = filtered;
    renderWhatsAppTemplates();
    whatsappTemplates = original;
  }

  function filterWhatsAppByCategory() {
    const cat = document.getElementById('whatsappCategoryFilter').value;
    const q = document.getElementById('whatsappSearchInput').value.toLowerCase().trim();
    let list = whatsappTemplates || [];
    if (cat) list = list.filter(t => (t.category || '') === cat);
    if (q) {
      list = list.filter(t =>
        (t.waName || '').toLowerCase().includes(q) ||
        (t.displayName || '').toLowerCase().includes(q) ||
        (t.category || '').toLowerCase().includes(q)
      );
    }
    const original = whatsappTemplates;
    whatsappTemplates = list;
    renderWhatsAppTemplates();
    whatsappTemplates = original;
  }

  function editWhatsAppTemplate(id) {
    showAlert('WhatsApp template editing coming soon', 'info');
  }

  function deleteWhatsAppTemplate(id) {
    showAlert('WhatsApp template deletion coming soon', 'info');
  }

  function openCreateTemplateModal() {
    const activeTab = document.querySelector('.template-tab.active').dataset.tab;
    if (activeTab === 'email') {
      openCreateEmailTemplateModal();
    } else {
      showAlert('WhatsApp template creation coming soon', 'info');
    }
  }

  function openCreateEmailTemplateModal() {
    currentEditingId = null;
    document.getElementById('emailTemplateModalTitle').textContent = 'Add Email Template';
    document.getElementById('emailTemplateForm').reset();
    document.getElementById('emailTemplateId').value = '';
    document.getElementById('isDefault').checked = false;
    document.getElementById('templateKeyPreview').style.display = 'none';

    const modalEl = document.getElementById('emailTemplateModal');
    const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
    modal.show();
  }

  // ---------- Init ----------
  document.addEventListener('DOMContentLoaded', function () {
    loadEmailTemplates();

    // Setup WhatsApp source toggle
    document.getElementById('srcMeta')?.addEventListener('change', () => {
      whatsappSource = 'meta';
      loadWhatsAppTemplates();
    });
    document.getElementById('srcLocal')?.addEventListener('change', () => {
      whatsappSource = 'local';
      loadWhatsAppTemplates();
    });

    // Setup Template Key preview on Template Name input
    const templateNameInput = document.getElementById('templateName');
    if (templateNameInput) {
      templateNameInput.addEventListener('input', updateTemplateKeyPreview);
      templateNameInput.addEventListener('keyup', updateTemplateKeyPreview);
    }
  });
</script>
